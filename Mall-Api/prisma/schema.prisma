// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ownerModel {
  id String @id @default(uuid())

  owner    String
  email    String @unique
  password String

  token    String?
  verified Boolean @default(false)

  avatar   String?
  avatarID String?

  role   String?
  roleID String? @unique

  store     Json
  createdAt DateTime @default(now())
}

model storeModel {
  id String @id @default(uuid())

  title       String?
  cost        Int
  description String?
  category    String
  color       String

  image   String?
  imageID String?

  ownerID String

  rating String?

  createdAt DateTime @default(now())
}

model theAdminModel {
  id String @id @default(uuid())

  email     String  @unique
  password  String
  token     String
  verified  Boolean @default(false)
  secretKey String

  role   String?
  roleID String? @unique

  createdAt DateTime @default(now())
}

model theDispatchRiderModel {
  id String @id @default(uuid())

  email    String @unique
  password String

  token    String?
  verified Boolean @default(false)

  role   String?
  roleID String? @unique

  disID String? @unique

  createdAt DateTime @default(now())
}
